pipeline {
    environment {
        NPM_CONFIG_CACHE = "${WORKSPACE}/.npm"
    }
    agent {
        docker {
            image 'node' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('deliver') { 
            steps {
                cp -r .next/static .next/standalone/.next/static
                cp -r public .next/standalone/public
                ./scripts/deliver.sh
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                ./scripts/kill.sh
            }
        }
    }
}