pipeline {
    agent {
        docker {
            image 'node:lts-bullseye-slim' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'chown -R 113:121 "/.npm"'
                sh 'npm -g install pnpm'
                sh 'pnpm install'
                sh 'pnpm run dev'
            }
        }
    }
}