pipeline {
    agent {
        docker {
            image 'nginx' 
            args '-p 443:443 -p 80:80' 
        }
    }
    stages{
        stage('build'){
            steps{
                sh 'sudo chmod -R 777 /usr/share/nginx/html'
                sh 'cp ./nginx/index.html /usr/share/nginx/html/index.html'
            }
        }
    }
    post { 
        always { 
            echo 'Done!'
        }
    }
}