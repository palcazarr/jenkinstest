pipeline {
    agent {
        docker {
            image 'nginx' 
            args '-p 443:443 -p 80:80' 
        }
    }
    stages{
        stage('build'){
            steps{
                sh 'tail -f /dev/null'
            }
        }
    }
    post { 
        always { 
            echo 'Done!'
        }
    }
}